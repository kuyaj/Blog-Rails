<!DOCTYPE html>
<html lang="en">
<body>
 
    
    <div class="card-group">
        <% @character.each do |item| %>
          <div class="card card-1">
            <h3><%= item.name %></h3>
            <h1><%= item.age  %></h1>
              <div class="card-control">
             <%= link_to "Destroy",  delete_post_path(item), method: :delete, 
                data: {
                    confirm: "Are you sure you want to do this?"
                },
                class: "button-delete"
             %>
                <%= link_to "Show", show_post_path(item), class: "button-show"  %>
            </div>
          </div>
        <% end %>
    </div>

 
</body>
</html>